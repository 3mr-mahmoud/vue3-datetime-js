{
  "name": "vue3-datetime-js",
  "description": "A Vue.js datepicker component",
  "version": "3.0.4",
  "author": "amroo",
  "license": "MIT",
  "main": "dist/vue-datetime-js.js",
  "keywords": [
    "vuejs",
    "persian",
    "jalali",
    "hijri",
    "islamic",
    "gregory",
    "gregory",
    "christian",
    "datepicker",
    "timepicker",
    "datetime picker",
    "vue datepicker",
    "persian datepicker",
    "jalali datepicker",
    "hijri datepicker",
    "Umm al-Qura datepicker",
    "islamic calendar",
    "christian datepicker",
    "gregory datepicker"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "build": "cross-env NODE_ENV=production webpack --progress",
    "export": "cross-env NODE_ENV=export webpack --progress",
    "browser": "cross-env NODE_ENV=browser webpack --progress",
    "buildAll": "npm run build && npm run export && npm run browser",
    "buildNotBrowser": "npm run build && npm run export",
    "lint": "eslint --fix --ext .js,.vue src"
  },
  "dependencies": {
    "moment-hijri": "^2.1.2",
    "moment-jalaali": "^0.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/3mr-mahmoud/vue3-datetime-js"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:vue/recommended",
      "prettier",
      "prettier/vue"
    ],
    "rules": {
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 5,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "vue/html-self-closing": [
        "error",
        {
          "html": {
            "void": "always",
            "normal": "always",
            "component": "always"
          },
          "svg": "always",
          "math": "always"
        }
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  }
}