{
  "name": "vue3-datetime-js",
  "description": "A Vue.js datepicker component",
  "version": "3.0.6",
  "author": "amroo",
  "license": "MIT",
  "main": "dist/vue-datetime-js.js",
  "keywords": [
    "vuejs",
    "persian",
    "jalali",
    "hijri",
    "islamic",
    "gregory",
    "gregory",
    "christian",
    "datepicker",
    "timepicker",
    "datetime picker",
    "vue datepicker",
    "persian datepicker",
    "jalali datepicker",
    "hijri datepicker",
    "Umm al-Qura datepicker",
    "islamic calendar",
    "christian datepicker",
    "gregory datepicker"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "build": "cross-env NODE_ENV=production webpack --progress",
    "export": "cross-env NODE_ENV=export webpack --progress",
    "browser": "cross-env NODE_ENV=browser webpack --progress",
    "buildAll": "npm run build && npm run export && npm run browser",
    "buildNotBrowser": "npm run build && npm run export",
    "lint": "eslint --fix --ext .js,.vue src"
  },
  "dependencies": {
    "moment-hijri": "github:3mr-mahmoud/moment-hijri",
    "moment-jalaali": "^0.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/3mr-mahmoud/vue3-datetime-js"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:vue/recommended",
      "prettier",
      "prettier/vue"
    ],
    "rules": {
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 5,
          "multiline": {
            "max": 1,
            "allowFirstLine": false
          }
        }
      ],
      "vue/html-self-closing": [
        "error",
        {
          "html": {
            "void": "always",
            "normal": "always",
            "component": "always"
          },
          "svg": "always",
          "math": "always"
        }
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "autoprefixer": "^10.4.17",
    "babel-loader": "^9.1.3",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.10.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.22.0",
    "file-loader": "^6.2.0",
    "highlight.js": "^11.9.0",
    "postcss-loader": "^8.1.1",
    "sass": "^1.71.1",
    "sass-loader": "^14.1.1",
    "vue": "^3.4.21",
    "vue-loader": "^17.4.2",
    "vue-router": "^4.3.0",
    "vue-style-loader": "^4.1.3",
    "vue-template-compiler": "^2.7.16",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}